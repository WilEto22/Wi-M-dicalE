{
  "dashboard": {
    "title": "CrudApp Medical - Application Metrics",
    "tags": ["spring-boot", "crudapp", "medical"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{application=\"crudApp\"}[5m])",
            "legendFormat": "{{method}} {{uri}} - {{status}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "HTTP Request Duration (95th percentile)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{application=\"crudApp\"}[5m]))",
            "legendFormat": "{{method}} {{uri}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "JVM Memory Usage",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{application=\"crudApp\"}",
            "legendFormat": "{{area}} - {{id}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "system_cpu_usage{application=\"crudApp\"}",
            "legendFormat": "System CPU"
          },
          {
            "expr": "process_cpu_usage{application=\"crudApp\"}",
            "legendFormat": "Process CPU"
          }
        ]
      },
      {
        "id": 5,
        "title": "Database Connection Pool",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "hikaricp_connections_active{application=\"crudApp\"}",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "hikaricp_connections_idle{application=\"crudApp\"}",
            "legendFormat": "Idle Connections"
          },
          {
            "expr": "hikaricp_connections{application=\"crudApp\"}",
            "legendFormat": "Total Connections"
          }
        ]
      },
      {
        "id": 6,
        "title": "HTTP Status Codes",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{application=\"crudApp\"}[5m])",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Garbage Collection",
        "type": "graph",
        "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(jvm_gc_pause_seconds_count{application=\"crudApp\"}[5m])",
            "legendFormat": "{{action}} - {{cause}}"
          }
        ]
      },
      {
        "id": 8,
        "title": "Thread Count",
        "type": "graph",
        "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "jvm_threads_live_threads{application=\"crudApp\"}",
            "legendFormat": "Live Threads"
          },
          {
            "expr": "jvm_threads_daemon_threads{application=\"crudApp\"}",
            "legendFormat": "Daemon Threads"
          }
        ]
      }
    ],
    "refresh": "10s",
    "schemaVersion": 16,
    "version": 1
  }
}
