# ================================
# Environment Variables Template
# ================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ================================
# Database Configuration
# ================================
DATABASE_URL=jdbc:mysql://localhost:3306/crudapp_db?useSSL=false&serverTimezone=UTC
DATABASE_USERNAME=crudapp_user
DATABASE_PASSWORD=change_this_password

# ================================
# JWT Configuration
# ================================
# Generate a secure random key (minimum 256 bits)
# Example: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-this-in-production-minimum-256-bits
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ================================
# Email Configuration
# ================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# ================================
# Application Configuration
# ================================
SPRING_PROFILES_ACTIVE=dev
APP_NAME=CrudApp Medical

# ================================
# Docker Configuration
# ================================
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=crudapp_db
MYSQL_USER=crudapp_user
MYSQL_PASSWORD=crudapp_password
